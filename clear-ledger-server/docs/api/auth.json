{
  "openapi": "3.1.0",
  "info": {
    "title": "Clear Ledger - Auth APIs",
    "description": "Clear Ledger - A simple Home Ledger",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "User login",
        "description": "User login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "required": true,
                    "description": "Username"
                  },
                  "password": {
                    "type": "string",
                    "required": true,
                    "description": "Password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success",
            "headers": {
              "Authorization": {
                "schema": {
                  "type": "string"
                },
                "description": "User authorisation token"
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "User id"
                    },
                    "username": {
                      "type": "string",
                      "description": "Username"
                    },
                    "email": {
                      "type": "string",
                      "description": "User's email"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "User authorisation failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "timestamp": {
                      "type": "datetime",
                      "description": "Request time"
                    },
                    "message": {
                      "type": "string",
                      "description": "Error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "User registration",
        "description": "User registration",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "required": true,
                    "description": "Username"
                  },
                  "password": {
                    "type": "string",
                    "required": true,
                    "description": "Password"
                  },
                  "email": {
                    "type": "string",
                    "required": true,
                    "description": "User's email"
                  },
                  "verificationCode": {
                    "type": "string",
                    "required": true,
                    "description": "The verification code sent to user by email"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User successfully registered",
            "headers": {
              "Authorization": {
                "schema": {
                  "type": "string"
                },
                "description": "User authorisation token"
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "User id"
                    },
                    "username": {
                      "type": "string",
                      "description": "Username"
                    },
                    "email": {
                      "type": "string",
                      "description": "User's email"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "User information conflict with existing info.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "timestamp": {
                      "type": "datetime",
                      "description": "Request time."
                    },
                    "message": {
                      "type": "string",
                      "description": "Error message."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/verification-code/{audience}": {
      "get": {
        "summary": "Get verification code.",
        "description": "Send a email containing a verification code to the given email address.",
        "parameters": [
          {
            "name": "audience",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "User's email address."
          }
        ],
        "responses": {
          "204": {
            "description": "The email containing the verification code has been sent successfully."
          }
        }
      }
    }
  }
}